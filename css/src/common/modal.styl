// MODALS
// Modified from twitter/bootstrap
// --------------

.modal-backdrop
  position: fixed
  // full mask: awesome
  left: 0
  top: 0
  right: 0
  bottom: 0
  background-color: #fff
  z-index: zindexModalBackdrop
  opacity(0.8)

// Base modal
.modal
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: zindexModal;
  width: 560px;
  margin: -250px 0 0 -280px;
  background-color: #fff;
  border: 6px solid grayColor;
  border-radius(6px);
  box-shadow(0 3px 7px rgba(0,0,0,0.3));
  background-clip(padding-box);

.modal-header
  height: 30px;
  line-height: 30px;
  padding: 5px 15px;
  background-color: #efefef;
  border-bottom: 1px solid #eee;
  clearfix();
  .title
    font-size: 16px;
    font-weight: bold;
    color: darkGrayColor;
    float: left;
  // Close icon
  .close
    font-size: 20px;
    color: darkGrayColor;
    float: right;
    &:hover
      color: lighten(darkGrayColor, 30%);
  button.close
    padding: 0;
    cursor: pointer;
    background: transparent;
    border: 0;
    -webkit-appearance: none;
    

// Body (where all modal content resides)
.modal-body
  overflow-y: auto;
  max-height: 400px;
  padding: 15px;

// Remove bottom margin if need be
.modal-form
  margin-bottom: 0;

// Footer (for actions)
.modal-footer
  padding: 14px 15px 15px;
  margin-bottom: 0;
  text-align: right; // right align buttons
  background-color: #f5f5f5;
  border-top: 1px solid #ddd;
  border-radius(0 0 6px 6px);
  //box-shadow(inset 0 1px 0 #fff);

// IE6
.lt-ie7
  .modal-backdrop
    position: absolute
    width: 100%
  .modal
    position: absolute
